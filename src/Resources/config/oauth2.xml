<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bike.api.oauth2.repository.user.class">Bike\Api\OAuth2\Repository\UserRepository</parameter>
        <parameter key="bike.api.oauth2.repository.client.class">Bike\Api\OAuth2\Repository\ClientRepository</parameter>
        <parameter key="bike.api.oauth2.repository.access_token.class">Bike\Api\OAuth2\Repository\AccessTokenRepository</parameter>
        <parameter key="bike.api.oauth2.repository.refresh_token.class">Bike\Api\OAuth2\Repository\RefreshTokenRepository</parameter>
        <parameter key="bike.api.oauth2.repository.auth_code.class">Bike\Api\OAuth2\Repository\AuthCodeRepository</parameter>
        <parameter key="bike.api.oauth2.repository.scope.class">Bike\Api\OAuth2\Repository\ScopeRepository</parameter>
    </parameters>

    <services>
        <service id="bike.api.oauth2.repository.user" class="%bike.api.oauth2.repository.user.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bike.api.oauth2.repository.client" class="%bike.api.oauth2.repository.client.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bike.api.oauth2.repository.access_token" class="%bike.api.oauth2.repository.access_token.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bike.api.oauth2.repository.refresh_token" class="%bike.api.oauth2.repository.refresh_token.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bike.api.oauth2.repository.auth_code" class="%bike.api.oauth2.repository.auth_code.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bike.api.oauth2.repository.scope" class="%bike.api.oauth2.repository.scope.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
